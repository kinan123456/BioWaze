<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    tools:context=".UserActivities.ShareFeelingsActivity"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bodyPartText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="Select Body Part"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <Spinner
            android:id="@+id/bodyPartSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/bodyPartText"
            android:layout_alignStart="@+id/bodyPartText"
            android:layout_alignLeft="@+id/bodyPartText"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-1dp"></Spinner>


        <TextView
            android:id="@+id/feelingText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="130dp"
            android:text="Select Feeling"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <Spinner
            android:id="@+id/feelingSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/feelingText"
            android:layout_alignStart="@+id/feelingText"
            android:layout_alignLeft="@+id/feelingText"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-1dp"></Spinner>


        <TextView
            android:id="@+id/whenStartedText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="210dp"
            android:text="When It Started?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/startedFeelingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whenStartedText"
            android:layout_alignStart="@id/whenStartedText"
            android:layout_alignLeft="@id/whenStartedText"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="MM/DD/YYYY">

        </EditText>

        <TextView
            android:id="@+id/whenStoppedText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="300dp"
            android:text="When It Stopped?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/stoppedFeelingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whenStoppedText"
            android:layout_alignStart="@id/whenStoppedText"
            android:layout_alignLeft="@id/whenStoppedText"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="MM/DD/YYYY">

        </EditText>
        <TextView
            android:id="@+id/possibleReasonText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="430dp"
            android:text="Possible Reason"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

            <EditText
                android:id="@+id/possibleReasonContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/possibleReasonText"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="480dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="6"
                android:minLines="4" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:text="Share"
            android:onClick="shareFeelingClick"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
